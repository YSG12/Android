<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <com.stav.zhbj.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.stav.zhbj.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_group"
        android:orientation="horizontal"
        android:background="@mipmap/bottom_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rb_home"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_selector"
            android:text="首页"
            style="@style/Bottom_Tab_Style" />
        <RadioButton
            android:id="@+id/rb_news"
            android:drawableTop="@drawable/tab_news_selector"
            android:text="新闻中心"
            style="@style/Bottom_Tab_Style" />
        <RadioButton
            android:id="@+id/rb_smart"
            android:drawableTop="@drawable/tab_smart_selector"
            android:text="智慧服务"
            style="@style/Bottom_Tab_Style" />
        <RadioButton
            android:id="@+id/rb_gov"
            android:drawableTop="@drawable/tab_gov_selector"
            android:text="政务"
            style="@style/Bottom_Tab_Style" />
        <RadioButton
            android:id="@+id/rb_setting"
            android:drawableTop="@drawable/tab_setting_selector"
            android:text="设置"
            style="@style/Bottom_Tab_Style" />

    </RadioGroup>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_10"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_marginBottom="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/ib_author"
            android:src="@mipmap/head"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ib_author"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_author"
            android:layout_marginLeft="@dimen/space_10"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/text_size_10"
            android:id="@+id/tv_createAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@null"
                android:src="@drawable/base_action_bar_enshrine_bg_selector"
                android:id="@+id/ib_enshrine"
                android:padding="@dimen/space_5"
                android:scaleType="fitXY"
                android:layout_width="@dimen/space_35"
                android:layout_height="@dimen/space_35"/>

            <TextView
                android:id="@+id/tv_selector"
                android:textColor="@color/swiperefresh_color3"
                android:textSize="@dimen/text_size_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/space_3"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_commment"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:text="10"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_3"
                android:layout_toRightOf="@id/ib_commment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_like"
                android:src="@drawable/base_action_bar_like_bg_selector"
                android:background="@null"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_like_num"
                android:text="10"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_3"
                android:layout_toRightOf="@id/ib_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
